<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#BAFCFFFF"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginRight="0dp">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_weight="4.9"
            android:layout_height="match_parent"
            android:src="@drawable/back_button"
            android:id="@+id/back_forgot"
            android:background="#fff"
            android:tint="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="Forgot Password"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            android:textSize="17dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <ImageView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/circlecropped" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forget_1"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Forgot Password"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/new_round"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/call"
                android:text="*"
                android:textColor="@color/colorPrimary"
                android:textSize="44sp"
                android:tint="#504F4F" />

            <EditText
                android:id="@+id/phone_forget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:backgroundTint="#fff"
                android:hint="Phone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:textColor="#000"
                android:textColorHighlight="#fff"
                android:textColorHint="#504F4F" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/register_forget"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:gravity="center"
                android:text="Send OTP"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forget_3"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Enter New Password"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/new_round"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_password"
                android:tint="#504F4F" />

            <EditText
                android:id="@+id/password_forget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:backgroundTint="#fff"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:textColor="#000"
                android:textColorHighlight="#fff"
                android:textColorHint="#504F4F" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/new_round"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/ic_password"
                android:tint="#504F4F" />

            <EditText
                android:id="@+id/confirm_forget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:backgroundTint="#fff"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:textColor="#000"
                android:textColorHighlight="#fff"
                android:textColorHint="#504F4F" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/final_forget"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:id="@+id/forget_2"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Verify OTP"
            android:textColor="#6D6A6A"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/new_round"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/ic_otp"
                android:textSize="44sp"
                />

            <EditText
                android:id="@+id/verify_otp2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:backgroundTint="#fff"
                android:hint="Enter OTP sent to your phone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:textColor="#000"
                android:textColorHighlight="#fff"
                android:textColorHint="#504F4F" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <Button
                android:id="@+id/verify_it2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:gravity="center"
                android:text="Verify OTP"
                android:textColor="#fff" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/forgot_otp2"
            android:background="#07FFFFFF"
            android:text="Resend OTP again"
            android:layout_marginTop="10dp"
            android:textColor="#6D6A6A"
            android:textSize="18sp"
            />
    </LinearLayout>
</RelativeLayout>