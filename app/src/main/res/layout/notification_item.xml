<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:id="@+id/click_notification"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="0dp"
        android:background="@drawable/date_final_round"
       >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_notification"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"
        android:background="#e6e7e8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text=" NOTIFICATION"
            android:textSize="21sp"
            android:textColor="#000"
            android:gravity="center|left"
            android:layout_marginBottom="0dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Time : 2:00 pm"
            android:textSize="13sp"
            android:padding="0dp"
            android:paddingStart="5dp"
            android:id="@+id/time_notification"
            android:textColor="#000"
            android:gravity="center|left"
            android:textStyle=""/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Date: 23-02-2020"
            android:paddingStart="5dp"
            android:id="@+id/date_notification"
            android:textSize="13sp"
            android:padding="0dp"
            android:textColor="#000"
            android:gravity="center|left"
            android:textStyle=""/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Message: Hi their is a big announcement"
            android:paddingStart="5dp"
            android:id="@+id/msg_notification"
            android:textSize="12sp"
            android:padding="0dp"
            android:textColor="#000"
            android:gravity="left"
            android:textStyle=""/>

    </LinearLayout>
</LinearLayout>