<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/support_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:padding="15dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Name :"
          android:layout_weight="1"
          android:textSize="18sp"
          android:layout_gravity="center|left"
          android:gravity="center|left"
          />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight=".3"
            android:id="@+id/name_of_owner"
            android:textSize="18sp"
            android:gravity="center|left"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Plan Name :  "
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center|left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="0.4"
                android:textSize="18sp"
                android:id="@+id/plan_name"
                android:gravity="center|left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Expiry Date :  "
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center|left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="0.4"
                android:id="@+id/expiry_date"
                android:textSize="18sp"
                android:gravity="center|left"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/call_her"
                android:text="Upgrade to pro plan Call"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/icon_phone"
                android:id="@+id/call_the_boss"
                />
        </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="990dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:src="@drawable/profess_copy"
                />
    </LinearLayout>
</ScrollView>
</LinearLayout>