<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="330dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_toolbar"
    android:orientation="vertical"
    android:layout_width="330dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:background="@drawable/draw_redmenu"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="10dp"
        android:textColor="#4E4D4D"
        android:textSize="36sp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome"
    android:layout_marginStart="10dp"
    android:textColor="#4E4D4D"
    android:textSize="36sp"
    />
 <TableRow android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="#C08000"
     android:layout_marginBottom="4dp"
     />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:id="@+id/dashboard"
      android:background="@drawable/draw_redmenu"
      android:orientation="horizontal">
  <ImageView
      android:layout_width="60dp"
      android:layout_height="30dp"
      android:tint="#4E4D4D"
      android:layout_gravity="center"
      android:id="@+id/dashboard_image"
      android:src="@drawable/crown12"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="DASHBOARD"
      android:id="@+id/dashboard_text"
   android:textSize="16sp"
      android:layout_gravity="center"
      android:layout_marginLeft="10dp"
      android:gravity="center"
      android:textColor="#4E4D4D"
      />
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/appointments"
        android:background="@drawable/draw_redmenu"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:tint="#4E4D4D"
            android:id="@+id/appointments_image"
            android:src="@drawable/ic_appointment_final"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ORDERS"
            android:layout_gravity="center"
            android:id="@+id/appointments_text"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#4E4D4D"
            />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
        android:id="@+id/services"
    android:background="@drawable/draw_redmenu"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:tint="#4E4D4D"
        android:id="@+id/service_image"
        android:src="@drawable/version2_add"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="PRODUCTS"
        android:id="@+id/service_text"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#4E4D4D"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="visible"
        android:id="@+id/create_appointments"
        android:background="@drawable/draw_redmenu"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:tint="#4E4D4D"
            android:id="@+id/create_appointments_image"
            android:src="@drawable/version2_slots"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="HSN List / SAC"
            android:layout_gravity="center"
            android:id="@+id/create_appointments_text"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#4E4D4D"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/support"
        android:visibility="visible"
        android:background="@drawable/draw_redmenu"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:tint="#4E4D4D"
            android:id="@+id/support_image"
            android:src="@drawable/ic_headphones_final"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SUPPORT"
            android:id="@+id/support_text"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#4E4D4D"
            />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
        android:id="@+id/setting"
    android:background="@drawable/draw_redmenu"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:tint="#4E4D4D"
        android:id="@+id/setting_image"
        android:src="@drawable/ic_settings_final"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="SETTING"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:id="@+id/setting_text"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#4E4D4D"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="visible"
        android:background="@drawable/draw_redmenu"
        android:id="@+id/slots_info_get"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:tint="#4E4D4D"
            android:id="@+id/slots_menu"
            android:src="@drawable/ic_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SLOTS"
            android:id="@+id/slots_text"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#4E4D4D"
            />
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/draw_redmenu"
        android:id="@+id/logout"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:id="@+id/logout_menu"
        android:tint="#4E4D4D"
        android:src="@drawable/ic_logout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="LOGOUT"
        android:id="@+id/logout_text"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#4E4D4D"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/offer"
        android:visibility="invisible"
        android:background="@drawable/draw_redmenu"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:tint="#4E4D4D"
            android:id="@+id/offer_image"
            android:src="@drawable/ic_offer_final"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="OFFER"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:id="@+id/offer_text"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="#4E4D4D"
            />
    </LinearLayout>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:background="@drawable/draw_redmenu"
      android:layout_marginTop="15dp"
      android:orientation="vertical"
      >
      <ImageView
          android:layout_width="100dp"
          android:layout_height="130dp"
          android:src="@drawable/circlecropped"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="greycart"
          android:textColor="#C08000"
          android:id="@+id/web_link1"
          android:autoLink="web"
          android:layout_marginTop="0dp"
          android:textSize="16sp"
          android:layout_marginBottom="0dp"
          ></TextView>
  </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/draw_redmenu"
            android:orientation="horizontal"/>
</LinearLayout>

    </ScrollView>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beta Version 1.0.6 \n Powered By Accountantlalaji"
        android:layout_alignParentBottom="true"
        android:textColor="#fff"
        android:id="@+id/menu_version"
        android:background="@color/basecolor"
        android:layout_marginTop="0dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="0dp"
        ></TextView>
</RelativeLayout>