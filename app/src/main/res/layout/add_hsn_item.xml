<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Add HSN Item"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/hsn_heading"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#000"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColorHint="@color/graycolor"
        android:layout_marginTop="5dp"
        app:helperTextTextAppearance="@style/MyAppearance"
        app:hintTextAppearance="@style/MyAppearance">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:height="40dp"
            android:background="@drawable/updater"
            android:hint="Hsn Name*"
            android:layout_marginTop="0dp"
            android:textColorLink="#6C6B6B"
            android:textCursorDrawable="@color/graycolor"
            android:id="@+id/hsn_name_add"
            android:textColorHint="#000"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="left|center"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/updater">
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hsn Rate*"
            android:inputType="number"
            android:layout_marginTop="0dp"
            android:textColorLink="#6C6B6B"
            android:textCursorDrawable="@color/graycolor"
            android:id="@+id/hsn_rate_add"
            android:textColorHint="#000"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="left|center"
            />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColorHint="@color/graycolor"
        android:layout_marginTop="5dp"
        app:helperTextTextAppearance="@style/MyAppearance"
        app:hintTextAppearance="@style/MyAppearance">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:height="40dp"
            android:background="@drawable/updater"
            android:hint="Hsn Description*"
            android:inputType="text"
            android:textColorLink="#6C6B6B"
            android:textCursorDrawable="@color/graycolor"
            android:layout_marginTop="0dp"
            android:id="@+id/hsn_description_add"
            android:textColorHint="#000"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="left|center"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:text="Add Item"
        android:textColor="#fff"
        android:background="@drawable/btn_round2"
        android:gravity="center"
        android:textSize="14sp"
        android:id="@+id/final_hsn_add"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:text="Cancel"
        android:textSize="14sp"
        android:textColor="#fff"
        android:id="@+id/final_hsn_cancel"
        android:background="@drawable/btn_round2"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        />
</LinearLayout>