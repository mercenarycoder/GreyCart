<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
   android:baselineAligned="false"
    android:padding="2dp"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="175dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:padding="0dp"
    android:elevation="7dp"
    android:gravity="center"
    android:layout_marginRight="5dp"
    android:background="@drawable/catyeffect"
    android:id="@+id/click"
    android:layout_height="165dp"
    android:layout_weight="1"
    >
    <ImageView
        android:id="@+id/cat_image"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/neweff"
        android:padding="5dp"
        android:src="@drawable/circlecropped" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textSize="14sp"
        android:layout_weight="0.3"
        android:layout_alignParentBottom="true"
        android:gravity="center|left"
        android:paddingStart="25dp"
        android:textColor="#000"
        android:layout_marginBottom="5dp"
        android:id="@+id/cat_name2"/>
<ImageButton
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:src="@drawable/ic_edit"
    android:layout_weight="1"
    android:background="@drawable/round_cat"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="2dp"
    android:id="@+id/edit_me"/>
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="0dp"
        android:id="@+id/click2"
        android:elevation="7dp"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/catyeffect"
        android:layout_height="165dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/circlecropped"
            android:padding="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/neweff"
            android:layout_marginBottom="25dp"
            android:id="@+id/cat_image2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:textSize="14sp"
            android:layout_weight="0.3"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:gravity="center|left"
            android:paddingStart="25dp"
            android:id="@+id/cat_name3"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_edit"
                android:layout_weight="1"
                android:background="@drawable/round_cat"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/edit_me2"/>
        </LinearLayout>
    </RelativeLayout></LinearLayout>
