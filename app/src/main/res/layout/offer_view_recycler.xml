<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:id="@+id/click_offer"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="0dp"
        android:background="@drawable/date_final_round"
        android:id="@+id/date_offer">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="23"
            android:textSize="34sp"
            android:textColor="#fff"
            android:layout_marginBottom="0dp"
            android:gravity="top|center"
            android:id="@+id/offer_date"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="FEB"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textColor="#fff"
            android:gravity="bottom|center"
            android:id="@+id/offer_mon"
            android:textStyle=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="vertical"
        android:id="@+id/offer_info"
        android:background="#e6e7e8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="CLIENT NAME"
            android:textSize="21sp"
            android:textColor="#000"
            android:gravity="center|left"
            android:layout_marginBottom="0dp"
            android:id="@+id/offer_name"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Offer Code : "
            android:textSize="13sp"
            android:padding="0dp"
            android:paddingStart="5dp"
            android:id="@+id/offer_code"
            android:textColor="#000"
            android:gravity="center|left"
            android:textStyle=""/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Offer Uses : "
            android:paddingStart="5dp"
            android:id="@+id/offer_uses"
            android:textSize="13sp"
            android:padding="0dp"
            android:textColor="#000"
            android:gravity="center|left"
            android:textStyle=""/>

        <TextView
            android:id="@+id/offer_status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="#C21E13"
            android:gravity="center"
            android:padding="0dp"
            android:paddingStart="5dp"
            android:text="Active"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>